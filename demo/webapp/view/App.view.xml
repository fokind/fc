<mvc:View xmlns:mvc="sap.ui.core.mvc" 
  xmlns="sap.m" 
  xmlns:fc="ui5lab.fc" 
  displayBlock="true">
  <App class="fcApp">
    <Page enableScrolling="false" 
      showHeader="false">
      <VBox height="100%">
        <fc:CandlestickChart candles="{/}" 
          padding="5 20 25 60">
          <fc:candles>
            <fc:Candle x="{time}" 
              open="{open}" 
              high="{high}" 
              low="{low}" 
              close="{close}"/>
          </fc:candles>
        </fc:CandlestickChart>
      </VBox>
    </Page>
  </App>
</mvc:View>
